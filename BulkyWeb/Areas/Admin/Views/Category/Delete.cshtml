@model Category

<form class="" method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input disabled asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger pt-1"></span>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input disabled asp-for="DisplayOrder" class="form-control" type="number" />
            <span asp-validation-for="DisplayOrder" class="text-danger pt-1"></span>
        </div>
        <div class="row">
            <h5>Are you sure you want to delete the selected category?</h5>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
