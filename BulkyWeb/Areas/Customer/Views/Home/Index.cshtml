@model IEnumerable<Product>

<div class="container">
    <div class="row pb-3">
        @foreach (Product product in Model)
        {
            <div class="col-lg-3 col-sm-6 d-flex align-items-stretch">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card h-100 flex-grow-1 shadow border-0 p-3 border-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                    <p class="card-title text-warning text-center">by <b class="font-weight-bold">@product.Author.ToString()</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark opacity-75 text-center mb-0">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark opacity-75 text-center">As Low as: @product.Price100.ToString("c")</p>
                                </div>
                                
                            </div>
                            <div class="text-center">
                                <a asp-action="Details" asp-route-id="@product.Id">
                                    <button class="w-100 btn btn-primary bg-gradient border-0">Details</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




